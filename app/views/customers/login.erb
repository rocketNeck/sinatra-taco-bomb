<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="col-md-12">
      <div class="well login-box">
        <form action="/customers" method="post">
          <legend>Login</legend>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input id="email" placeholder="E-mail" type="email" name="email" class="form-control"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" placeholder="Password" type="password" name="password_digest" class="form-control"/>
          </div>
          <div class="form-group text-center">
            <input type="submit" class="btn btn-success btn-login-submit" value="Log In"/>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
