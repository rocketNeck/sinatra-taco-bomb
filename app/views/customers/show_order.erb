<div class="container" style="width: 80%; heigth: 60%;margin: auto;background-color: #ffc30d;border: 2px solid #e68c21">
  <h1>Order</h1>
  <% @order.menu_items.each do |menu_item| %>
   <h3><%=menu_item.name%>: $ <%=menu_item.price%></h3>
   <%end%>
   <br><br>
   <h2>TOTAL : $<%=@order.total%></h2>

   <div class="container" style="margin-top: 10px;">
     <div class="row">
       <div class="col-md-12">
         <div class="well login-box">
           <form action="/customers/submit" method="post">
             <div class="form-group">
               <label for="address">Send My Taco To:</label>
               <input id="address" placeholder="Address" type="text" name="address" class="form-control"/>
             </div>
             <div class="form-group text-center">
               <input type="submit" class="btn btn-success btn-login-submit" value="Place Order"/>
             </div>
           </form>
         </div>
       </div>
     </div>
   </div>
</div>
